{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@countryconfig/*": [
        "./*"
      ]
    },
    "target": "es6",
    "module": "commonjs",
    "outDir": "build/dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "lib": [
      "esnext.asynciterable",
      "es6",
      "es2017",
      "es2019"
    ],
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "types": [
      "fhir",
      "jest",
      "geojson"
    ]
  },
  "include": [
    "src/**/*.ts",
    "infrastructure/environments/**/*.ts",
    "typings"
  ],
  "exclude": [
    "node_modules",
    "cypress",
    "build",
    "scripts",
    "acceptance-tests",
    "src/setupTests.ts",
    "src/**/*.test.ts"
  ],
  "ts-node": {
    "files": true
  }
}