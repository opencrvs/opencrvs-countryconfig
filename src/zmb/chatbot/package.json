{
  "name": "@opencrvs/chatbot",
  "version": "1.0.0-alpha.3.0",
  "description": "A Telegram chatbot to check the age of a child",
  "license": "MPL-2.0",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "start:prod": "node build/dist/src/index.js",
    "test": "jest --coverage --silent --noStackTrace && yarn test:compilation",
    "test:watch": "jest --watch",
    "open:cov": "yarn test && opener coverage/index.html",
    "precommit": "tslint --project ./tsconfig.json && lint-staged",
    "test:compilation": "tsc --noEmit",
    "build": "tsc",
    "postbuild": "ef-tspm",
    "build:clean": "rm -rf build",
    "docker:build": "docker build -t opencrvs/ocrvs-chatbot -f Dockerfile ../../../",
    "docker:push": "docker push opencrvs/ocrvs-chatbot"
  },
  "dependencies": {
    "@types/node-telegram-bot-api": "^0.40.2",
    "@types/pino": "^5.14.0",
    "app-module-path": "^2.2.0",
    "boom": "^7.2.0",
    "lodash": "^4.17.19",
    "moment": "^2.22.2",
    "node-fetch": "^2.6.1",
    "node-telegram-bot-api": "^0.40.0",
    "pino": "^5.14.0",
    "redis": "^3.0.2"
  },
  "devDependencies": {
    "@types/boom": "^7.2.0",
    "@types/jest": "^24.0.13",
    "@types/lodash": "^4.14.117",
    "@types/node-fetch": "^2.3.4",
    "@types/redis": "^2.8.16",
    "cross-env": "^5.2.0",
    "dotenv": "^6.1.0",
    "jest": "24.7.1",
    "jest-fetch-mock": "^2.1.2",
    "lint-staged": "^7.1.0",
    "nodemon": "^1.17.5",
    "prettier": "^1.19.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^6.1.1",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.17.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^3.7.4"
  },
  "lint-staged": {
    "src/**/*.{ts,graphql}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "setupFiles": [
      "./test/setupJest.ts"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "@ocrvs-chatbot/(.*)": "<rootDir>/src/$1"
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  },
  "resolutions": {
    "minimist": "^1.2.2",
    "acorn": "^6.4.1"
  }
}