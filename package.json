{
  "name": "@opencrvs/countryconfig",
  "version": "1.8.0",
  "description": "OpenCRVS country configuration for reference data",
  "os": [
    "darwin",
    "linux"
  ],
  "engines": {
    "node": "22.x.x"
  },
  "license": "MPL-2.0",
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "scripts": {
    "dev": "yarn start",
    "precommit": "lint-staged",
    "test": "vitest",
    "test:compilation": "tsc --noEmit",
    "lint": "eslint -c .eslintrc.js",
    "start": "cross-env NODE_ENV=development NODE_OPTIONS=--dns-result-order=ipv4first nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "start:prod": "ts-node --transpile-only -r tsconfig-paths/register src/index.ts",
    "deploy": "bash infrastructure/deployment/deploy.sh",
    "restore-snapshot": "bash infrastructure/backups/restore-snapshot.sh",
    "snapshot": "bash infrastructure/backups/backup.sh",
    "port-forward": "bash infrastructure/port-forward.sh",
    "environment:init": "ts-node infrastructure/environments/setup-environment.ts",
    "environment:upgrade": "yarn environment:init",
    "sort-translations": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register src/sort-translations.ts"
  },
  "devDependencies": {
    "@inquirer/editor": "^1.2.13",
    "@octokit/core": "4.2.1",
    "@types/handlebars": "^4.1.0",
    "@types/hapi__inert": "5.2.1",
    "@types/inquirer": "^9.0.7",
    "@types/libsodium-wrappers": "^0.7.10",
    "@types/minimist": "^1.2.5",
    "@types/prompts": "^2.4.9",
    "@types/react-intl": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "cypress-xpath": "^2.0.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "1.0.0-rc.13",
    "inquirer": "^9.2.12",
    "js-yaml": "^4.1.0",
    "kleur": "^4.1.5",
    "libsodium-wrappers": "^0.7.13",
    "lint-staged": "^7.1.0",
    "node-ssh": "^13.2.0",
    "nodemon": "^2.0.22",
    "pino-pretty": "^11.0.0",
    "prettier": "^3.4.2",
    "react-intl": "^6.4.3",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "^2.1.2"
  },
  "dependencies": {
    "@faker-js/faker": "^6.0.0-alpha.5",
    "@hapi/boom": "^9.1.1",
    "@hapi/hapi": "^20.0.1",
    "@hapi/inert": "^6.0.3",
    "@opencrvs/toolkit": "1.8.0-rc.af69da4",
    "@types/chalk": "^2.2.0",
    "@types/csv2json": "^1.4.0",
    "@types/fhir": "^0.0.30",
    "@types/geojson": "^7946.0.4",
    "@types/hapi__boom": "^9.0.1",
    "@types/hapi__hapi": "^20.0.0",
    "@types/jwt-decode": "^2.2.1",
    "@types/lodash": "^4.14.117",
    "@types/node": "^18.19.1",
    "@types/node-fetch": "^2.6.2",
    "@types/nodemailer": "^6.4.14",
    "app-module-path": "^2.2.0",
    "chalk": "^2.4.1",
    "country-data": "^0.0.31",
    "cross-env": "^6.0.3",
    "csv-stringify": "^6.4.6",
    "csv2json": "^2.0.2",
    "date-fns": "^2.28.0",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "esbuild": "^0.18.9",
    "handlebars": "^4.7.7",
    "hapi-auth-jwt2": "10.4.0",
    "hapi-pino": "^9.0.0",
    "hapi-sentry": "^3.1.0",
    "joi": "^17.4.0",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.21",
    "minimist": "^1.2.8",
    "nanoid": "3",
    "node-fetch": "^2.6.1",
    "nodemailer": "^6.9.8",
    "opener": "^1.5.1",
    "p-queue": "^6.6.2",
    "pino": "^7.0.0",
    "prompts": "^2.4.2",
    "short-uid": "^0.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^3.8.0",
    "typescript": "^5.1.6",
    "uuid": "^11.1.0",
    "zod": "^3.24.1"
  },
  "lint-staged": {
    "src/**/*.{ts,graphql}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "src/translations/*.csv": [
      "yarn sort-translations",
      "git add"
    ]
  },
  "resolutions": {
    "minimist": "^1.2.2",
    "acorn": "^6.4.1"
  }
}
